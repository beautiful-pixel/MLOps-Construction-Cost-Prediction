# Test Environment Configuration
# Used by conftest.py and test fixtures
# Note: Relative paths work locally; GitHub Actions will resolve relative to workspace root

# Data paths
CONFIG_ROOT=./configs
CONFIG_DIR=./configs
DATA_DIR=./data
AIRFLOW_PROJECT_ROOT=.

# MLflow
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_EXPERIMENT=test-experiment
MLFLOW_MODEL_NAME=construction_cost_model

# API
GATEWAY_PORT=8100
INFERENCE_PORT=8101
STREAMLIT_PORT=8501
AIRFLOW_PORT=8080

# Security
SECRET_KEY=test-secret-key-for-testing-only
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (for test containers)
POSTGRES_USER=testuser
POSTGRES_PASSWORD=testpass
POSTGRES_DB=test_db
GATEWAY_DB_NAME=test_gateway_api
GATEWAY_DB_USER=test_gateway
GATEWAY_DB_PASSWORD=test_gateway_pass

# Slack (disabled for tests)
SLACK_WEBHOOK_URL=http://localhost:8000/mock-webhook

# Airflow
AIRFLOW__CORE__EXECUTOR=LocalExecutor
AIRFLOW__DATABASE__SQL_ALCHEMY_CONN=sqlite:////tmp/test_airflow.db
AIRFLOW__CORE__LOAD_EXAMPLES=False
AIRFLOW__CORE__DAGS_FOLDER=./dags

# Testing
PYTEST_MODE=true
TESTING=true
